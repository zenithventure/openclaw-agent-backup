# Server
LISTEN_ADDR=:8080

# Store mode: "sqlite" (local dev) or "dynamo" (Lambda)
# Auto-detected in Lambda environment
STORE_MODE=sqlite

# SQLite (local dev only)
DATABASE_PATH=./backup.db

# DynamoDB (Lambda only)
DYNAMO_ENDPOINT=              # Leave empty for real AWS; set for DynamoDB Local
DYNAMO_AGENTS_TABLE=openclaw-backup-agents
DYNAMO_BACKUPS_TABLE=openclaw-backup-backups

# S3-compatible storage
# For local dev with MinIO:
#   S3_ENDPOINT=http://localhost:9000
#   S3_FORCE_PATH_STYLE=true
#   S3_ACCESS_KEY=minioadmin
#   S3_SECRET_KEY=minioadmin
# For Lambda: leave S3_ENDPOINT empty, credentials from IAM role
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=openclaw-backups
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_FORCE_PATH_STYLE=false

# Security
TOKEN_SECRET=change-me-in-production

# Defaults
DEFAULT_QUOTA_BYTES=524288000    # 500 MB
REGISTER_RATE_LIMIT=10           # registrations per minute per IP
PRESIGN_EXPIRY_SECONDS=900       # 15 minutes
RETENTION_DAYS=7                 # free tier: 7 days
